{
    "name": "openpublicmedia/pbs-station-manager-php",
    "description": "PHP client for interacting with the PBS Station Manager API.",
    "type": "library",
    "license": "Apache-2.0",
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.3 || ^7.0",
        "jawira/case-converter": "^3.0",
        "league/uri": "^6.5",
        "league/uri-components": "^2.0",
        "phpcompatibility/php-compatibility": "^9.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.2",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "OpenPublicMedia\\PbsStationManager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenPublicMedia\\PbsStationManager\\Test\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform-check": false,
        "platform": {
            "php": "8.0"
        }
    }
}
